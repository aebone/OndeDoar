<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="OndeDoar.View.ListDetailPage"
    Title="Detalhes">
	<ContentPage.Content>
        
        <StackLayout Padding="20" Spacing="10">
            <Label Text="{ Binding Name }" FontAttributes="Bold" HorizontalOptions="Center" TextColor="#ea2763" FontSize="Large" Margin="0,0,0,10"/>
            <Label Text="Endereço" FontAttributes="Bold" TextColor="#ea2763" FontSize="Small"/>
            <Label Text="{ Binding Address }"/>
            <Label Text="O que recebe" FontAttributes="Bold" TextColor="#ea2763" FontSize="Small"/>
            <Label Text="{ Binding What }"/>
            <Label Text="Descrição" FontAttributes="Bold" TextColor="#ea2763" FontSize="Small"/>
            <Label Text="{ Binding Description }"/>
            <Label Text="Contato" FontAttributes="Bold" TextColor="#ea2763" FontSize="Small"/>
            <Label Text="{ Binding Contato }"/>
        </StackLayout>
        
	</ContentPage.Content>
</ContentPage>
